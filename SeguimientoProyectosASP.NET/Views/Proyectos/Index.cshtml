@model IEnumerable<SeguimientoProyectosASP.NET.Models.Proyecto>
<div class="row">
    <div class="col-lg-12">
        <h1 class="well page-header"><i class="fa fa-archive"></i> Módulo de Proyectos</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Listado de Proyectos
                @Html.ActionLink("Agregar Nuevo", "Create", "Proyectos", new { area = "" }, new { @class = "btn btn-success btn-sm pull-right" })
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12 table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTable" id="dataTables.proyectyos">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.nombre)</th>
                                    <th>@Html.DisplayNameFor(model => model.descripcion)</th>
                                    <th>@Html.DisplayNameFor(model => model.fecha_inicio)</th>
                                    <th>@Html.DisplayNameFor(model => model.fecha_fin)</th>
                                    <th>@Html.DisplayNameFor(model => model.Usuario.nombres)</th>
                                    <!--<th>Mantenimiento</th>-->
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.nombre)</td>
                                        <td>@Html.DisplayFor(modelItem => item.descripcion)</td>
                                        <td>@Html.DisplayFor(modelItem => item.fecha_inicio)</td>
                                        <td>@Html.DisplayFor(modelItem => item.fecha_fin)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Usuario.nombres)</td>
                                        <!--<td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.codigo }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.codigo }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.codigo })
                                        </td>-->
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script type="text/javascript">
        $("#dataTables.proyectyos").dataTable({

        });
    </script>
}
